<div class="col-md-8 col-md-offset-2">
  <h2 class="text-center">Edit post</h2>
  <%= form_for(@post) do |f| %>
    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, required: true, id: "post_title", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body %><br>
      <%= f.text_area :body, required: true, id: "post_body", class: "form-control", rows: "20" %>
    </div>
    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

