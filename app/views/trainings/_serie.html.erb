<tr class="serie" data-serie-id="<%= serie.id if serie %>">
  <td style="width: 20%;">
    <div class="form-group">
      <select class="excercise form-control">
        <option value="default">Excercise</option>
        <% @excercises.each do |e| %>
          <option value="<%= e.id %>" <%= 'selected="selected"' if (serie) && (e.id.equal? serie.excercise.id) %>><%= e.name %></option>
        <% end %>
      </select>
    </div>
  </td>
  <td style="width: 8em;">
    <div class="form-group">
      <input type="text" placeholder="Series" class="series form-control" value="<%= serie.series if serie %>" />
    </div>
  </td>
  <td style="width: 60%;">
    <div class="form-group">
      <input type="text" class="note form-control" placeholder="Note" value="<%= serie.note if serie %>" />
    </div>
  </td>
  <td>
    <button class="pull-right btn btn-xs btn-danger remove-excercise"><i class="fa fa-trash"></i> Remove</button>
  </td>
</tr>
