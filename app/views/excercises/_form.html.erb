<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for(@excercise, remote: remote, html: {role: :form, 'data-model' => 'excercise'}) do |f| %>

  <% if @excercise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@excercise.errors.count, "error") %> prohibited this excercise from being saved:</h2>

      <ul>
      <% @excercise.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# Added Bootstrap classes, and help-block container for error messages %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label' %><br>
    <%= f.text_field :name, class: 'form-control' %>
    <span class="help-block"></span>
  </div>
  
  <div class="form-group">
    <%= f.label :description, class: 'control-label' %><br>
    <%= f.text_area :description, rows: 6, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <%# Added Bootstrap classes %>
  <div class="actions">
    <%= f.submit button, class: 'btn btn-success' %>
  </div>

<% end %>
